(ns pile.test.anonfn
    (:refer pile.test pile.test.util))
           
(test= ["AnonFn" "Eval"]
    "ab" (#(str %0 %1) "a" "b"))
    
(defn foo [a b] (#(str %0 %1) a b))
    
(test= ["AnonFn" "Compile"]
    "ab" (foo "a" "b"))
    
(defn nested-add [a] (#(+ 1 (+ 3 %)) a))
    
(test= ["AnonFn" "Compile" "Nested"]
    6 (nested-add 2))            
    
(test= ["AnonFn" "Map"]
    {:a :b} (#(let [m {:a %}] m) :b))    
(test= ["AnonFn" "Set"]
    #{:b} (#(let* [m #{%}] m) :b))
(test= ["AnonFn" "Vec"]
    [:a :b] (#(let* [m [:a %]] m) :b))   